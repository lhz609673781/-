/*导航条*/
.weui-navbar{
	background:#fff;
}
.weui-navbar__item{
	color:#333;
	position: relative;
}
.weui-navbar__item:after{
	border-right:none;
}
.weui-navbar__item.weui-bar__item--on{
	color: #31acfa;
    background-color: transparent;

}
.weui-navbar__item.weui-bar__item--on:before{
	content: '';
	position: absolute;
	left:0;
	bottom:0px;
	width:100%;
	height: 2px;
	background:#31acfa ;
}
/*======================任务详情===========================*/
/*提示信息*/
.task-detail-tips{
	padding:6px 0;
	margin-bottom: 10px;
	border-bottom: 1px solid #dedede;
}
.task-detail-tips .weui-flex__item{
	text-align: center;
}
.task-detail-tips .weui-flex__item>p{
	color:#31acfa;
}
.task-detail-tips .weui-flex__item>span{
	display: block;
	color:#636363;
	font-size: 13px;
}

/*任务单列表部分通用*/
.task-list-item-con{	
	margin-bottom: 65px;
}
.task-list-item-part{
	position: relative;
	padding:12px;
	background:#fff;
	border-top:1px solid #dedede;
	border-bottom: 1px solid #dedede;
	font-size:15px;
}
.task-list-item-part .weui-flex{
	margin-bottom: 6px;
}
.task-list-item-part .task-con-title{
	width:74px;
	color:#666;
}
.task-con-title .w4{
	display: inline-block;
	width:4em;
}
.task-con-title .w3{  
	letter-spacing:0.5em; 
	margin-right:-0.5em; 
}
.task-con-title .w2{  
	letter-spacing:2em; 
	margin-right:-2em;
}
.task-list-item-part .weui-flex__item{
	padding-left:4px;
	color:#333;
}
.task-list-item-part > p{
	font-size:13px;
	color:#8f8f8f;
}
.light-color{
	color:#666;
}
/*底部导航*/
.weui-footer{
	background:#fff;
	padding:5px 0 2px 0;
	border-top:1px solid #e6e6e6;
}
.weui-footer_fixed-bottom{
	bottom:0;
}
.weui-footer .footer-item{
	width:22px;
	height:22px;
	margin:0 auto;
}
.weui-footer .footer-item>img{
	display: block;
    width: 100%;
    height: 100%;
}
.footer-item-text{
	margin-top:3px;
	display: block;
    text-align: center;
    color: #636363;
    font-size: 14px;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

/*======================查看轨迹===========================*/
#task-tab2 .transport-map{
	width:100%;
	min-height:500px;
	background:#eee;
}

/*======================查看回单/异常信息===========================*/
.check-waybill .task-list-item-part{
	margin-top:10px;
}
.check-waybill .task-list-item-part .weui-flex{
	margin-bottom: 0px;
}
.check-waybill .waybill-img>li{
	float: left;
    width: 20%;
    box-sizing: border-box;
    padding: 5px;
    list-style: none;
}
.check-waybill .waybill-img>li>img{
	width:100%;
}  