/*搜索部分*/
.check-task-search{
	padding:12px;
	background:#f5f5f5;
}
.check-task-search .weui-icon-search{
	position: absolute;
	top:8px;
	left:4px;
	font-size:16px;
}
.task-search-input{
	padding: 4px 0;
    width: 100%;
    height: 1.42857143em;
    border: 1px solid #dedede;
    border-radius: 4px;
    font-size: 14px;
    line-height: 1.42857143em;
    box-sizing: content-box;
    background: #fff;
    text-indent:28px;
    outline: none;

}
.task-search-btn{
	padding-left:15px;
}

/*任务列表部分*/

.task-list-item-title{
	text-align: center;
	padding:8px 0;
}

/*任务单列表部分通用*/
.task-list-item-part{
	position: relative;
	padding:12px;
	background:#fff;
	border-top:1px solid #dedede;
	border-bottom: 1px solid #dedede;
	margin-bottom: 10px;
	font-size:15px;
}
.task-list-item-part .weui-flex{
	margin-bottom: 6px;
}
.task-list-item-part .task-con-title{
	width:75px;
	color:#666;
}
.task-list-item-part .weui-flex__item{
	padding-left:4px;
}
.task-list-item-part > p{
	font-size:14px;
	color:#8f8f8f;
}
.task-list-item-part > p+p{
	margin-top:-2px;
}

.upload-task-status{
	position: absolute;
	top:13px;
	right:12px;
	font-size: 14px;
	letter-spacing: 1px;	
}
.span-info{
	margin-right:15px;
	font-size:13px;
	color: #999;
}
.color-mark{
	color:#ff6633;
	margin-right:2px;
}
