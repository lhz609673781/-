body{background: #3a4563;color:#333;font-size: 16px;}
#loginBox{
    width:520px;
    height:340px;
    position: absolute;
    top:50%;
    left:50%;
    margin-left:-260px;
    margin-top:-170px;
    background: #fff;
    border-radius: 4px;
    text-align: center;
}
#loginBox h1{
    font-size:20px;
    font-weight: 100;
    padding:35px 0 25px 0;
}
#loginBox .control{
    position: relative;
    overflow: hidden;
}
#loginBox .control input{
    width:340px;
    height:40px;
    border:1px solid #eee;
    text-indent:10px;
    margin: 0 0 30px 0px;
    font-size:14px;
    border-radius: 3px;
}
#loginBox .control input:focus{
    border-color:#4868f2;
}
#loginBox .control .getcode{
    padding:0 10px;
    position: absolute;
    top:1px;
    right:91px;
    height:38px;
    line-height: 38px;
    outline:none;
    cursor: pointer;
}
#loginBox .control .tips{
    position: absolute;
    top:45px;
    left:100px;
    font-size:14px;
    color:#fc4343;
    display: none;
}
#loginBox .btn-login{
    width:340px;
    height:40px;
    line-height: 40px;
    font-size:16px;
    color:#fff;
    background:#4868f2;
    border-radius: 3px;
    cursor: pointer;
    margin-top:15px;
}