/*搜索部分*/
.check-task-search{
	padding:12px;
	background:#f5f5f5;
}
.check-task-search .weui-icon-search{
	position: absolute;
	top:8px;
	left:4px;
	font-size:16px;
}
.task-search-input{
	padding: 14px 32px 14px 28px;
    width: 100%;
    height: 1.42857143em;
    border: 1px solid #dedede;
    border-radius: 4px;
    font-size: 14px;
    line-height: 1.42857143em;
    box-sizing: border-box;
    background: #fff;
    outline: none;
}
.task-search-btn{
	padding-left:15px;
}
.check-task-search .weui-icon-clear{
	position: absolute;
    top: 0px;
    right: 0px;
    font-size: 15px;
    width: 32px;
    line-height: 30px;
    text-align: center;
}

/*状态选择部分*/
.task-status{
	border-top:1px solid #dedede;
	border-bottom:1px solid #dedede;
	background:#fff;
	margin-bottom: 10px;
}
.task-status .weui-flex__item{
	position: relative;
	font-size:16px;
	line-height:44px;
	padding-bottom:3px;
	text-align:center;
}
/*发货时间*/
.task-status .deliver-time{
	line-height:47px;
}
.task-status .deliver-time .select-del{
	position: absolute;
	top:0px;
	right:0px;
	color:#02afff;
	line-height:47px;
	padding:0 6px;
	text-align:center;
	text-indent:0;
	font-size:16px;
	display:none;
}
.task-status .weui-flex__item>input{
	padding:13px 0;	
}
.task-status .weui-flex__item>select{
	font-size:16px;
	padding:13px 0;
	text-align:center;
	border:none;
	background:transparent;
	outline:none;
	color:#333;
}
.task-status .weui-flex__item .change-value{
	font-size:16px;
	border: none;
	color:#333;
}
.task-status .select-down{
	position: absolute;
	bottom:5px;
	left:50%;
	margin-left:-6px;
	width:12px;
	height:6px;
	background:url(../images/select-down.png) no-repeat center;
	background-size: 100%;
}
/*延迟+正常*/
.weui-flex__item.task-s-all .select-down{
	right:12px;
}
.task-s-time{
	position:absolute;
	top:1px;
	left:0;
	bottom:1px;
	width:100%;
	border:none;
	background:transparent;
	color:transparent;
	font-size:16px;
	text-indent:12px;
}
.task-status .weui-flex__item.active{
	color:#02afff;
}
.task-status .weui-flex__item.active .change-value{
	color:#02afff;
}
.task-status .weui-flex__item.active:after{
	content:'';
	position: absolute;
	left:0;
	bottom:-1px;
	width:100%;
	height:2px;
	background:#02afff;
}
.task-status .weui-flex__item.active .select-down{
	background:url(../images/select-up.png) no-repeat center;
	background-size: 100%;
}
/*任务列表部分*/
.task-list-item-title{
	text-align: center;
	padding:8px 0;
}

/*任务单列表部分通用*/
.task-list-item-part{
	position: relative;
	padding:12px;
	background:#fff;
	border-top:1px solid #dedede;
	border-bottom: 1px solid #dedede;
	margin-bottom: 10px;
	font-size:15px;
}
.task-list-item-part .weui-flex{
	margin-bottom: 6px;
}
.task-list-item-part .task-con-title{
	width:74px;
	color:#666;
}
.task-list-item-part .title-right{
	padding-right:92px;
}
.task-list-item-part .weui-flex__item{
	padding-left:4px;
	color:#333;
}
.task-list-item-part > .pbox{
	font-size:13px;
	color:#8f8f8f;
}
.upload-task-status{
	position: absolute;
	top:13px;
	right:12px;
	font-size: 13px;
	letter-spacing: 1px;	
}
.status-delay{
	right:60px;
} 
.span-info{
	margin-right:15px;
}
.color-mark{
	color:#ff6633;
	margin-right:2px;
}
.upload-task-link{
	position: absolute;
	right:12px;
	bottom:58px;
	padding:2px 8px;
	border:1px solid #ff7f00;
	border-radius: 4px;
	color:#ff7f00;
	font-size:14px;
}

