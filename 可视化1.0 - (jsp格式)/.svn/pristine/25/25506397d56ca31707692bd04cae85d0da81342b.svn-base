/*搜索部分*/
.check-task-search{
	padding:12px;
	background:#f5f5f5;
}
.check-task-search .weui-icon-search{
	position: absolute;
	top:8px;
	left:4px;
	font-size:16px;
}
.task-search-input{
	padding: 14px 32px 14px 28px;
    width: 100%;
    height: 1.42857143em;
    border: 1px solid #dedede;
    border-radius: 4px;
    font-size: 14px;
    line-height: 1.42857143em;
    box-sizing: border-box;
    background: #fff;
    outline: none;
}
.task-search-btn{
	padding-left:15px;
}
.check-task-search .weui-icon-clear{
	position: absolute;
    top: 0px;
    right: 0px;
    font-size: 15px;
    width: 32px;
    line-height: 30px;
    text-align: center;
}

/*状态选择部分*/
.task-status{
	border-top:1px solid #dedede;
	border-bottom:1px solid #dedede;
	background:#fff;
}
.task-status-item{
	position: relative;
	padding-bottom:3px;
	text-align:center;
}
/*项目组*/
.task-status-item.task-project{
}
.task-status-item.task-project > select{
	padding-right:13px;
}
/*发货时间*/
.task-status-item.deliver-time{
	width:120px;
	line-height:45px;
	text-indent:12px;
}
.task-status .deliver-time .select-del{
	position: absolute;
	top:0px;
	right:0px;
	color:#02afff;
	line-height:47px;
	text-align:center;
	text-indent:0;
	font-size:16px;
	display:none;
}
/*任务状态*/
.task-status-item.task-s{
	width:65px;
}
/*延迟正常状态*/
.task-status-item.task-s-all{
	width:60px;
}
.task-status-item.task-s-all .select-down{
	
}
.task-status-item>select{
	font-size:16px;
	padding:13px 0;
	border:none;
	background:transparent;
	outline:none;
	color:#333;
}
.task-status .select-down{
	position: absolute;
	bottom:5px;
	left:50%;
	margin-left:-6px;
	width:12px;
	height:6px;
	background:url(../images/select-down.png) no-repeat center;
	background-size: 100%;
}
.task-status .input-show{
	font-size:15px;
	color:#333;
	background:#fff;
}
.task-s-time{
	position:absolute;
	top:1px;
	left:2px;
	bottom:1px;
	width:100%;
	border:none;
	background:transparent;
	color:transparent;
	outline: none;
	font-size:15px;
	text-indent:12px;
}
.task-status .task-status-item.active:after{
	content:'';
	position: absolute;
	left:0;
	bottom:-2px;
	width:100%;
	height:2px;
	background:#02afff;
}
.task-status .task-status-item.active,
.task-status .task-status-item.active .change-value,
.task-status .task-status-item.active .input-show
{
	color:#02afff;
}
.task-status .task-status-item.active .select-down{
	background:url(../images/select-up.png) no-repeat center;
	background-size: 100%;
}
/*到达率*/
.task-project-tips{
	padding:7px 0;
	background:#fffae5;
	text-align: center;
	font-size: 14px;
	color:#636363;
}
.task-project-tips em{
	margin:0 10px 0 2px;
	font-size: 16px;
}
.task-project-tips em.del-margin{
	margin-right:0;
}
/*任务列表部分*/
.task-list-item-title{
	text-align: center;
	padding:8px 0;
}

/*任务单列表部分通用*/
.task-list-item-part{
	position: relative;
	padding:12px;
	background:#fff;
	border-top:1px solid #dedede;
	border-bottom: 1px solid #dedede;
	margin-bottom: 10px;
	font-size:15px;
}
.task-list-item-part .weui-flex{
	margin-bottom: 6px;
}
.task-list-item-part .task-con-title{
	width:74px;
	color:#666;
}
.task-list-item-part .title-right{
	padding-right:92px;
}
.task-list-item-part .weui-flex__item{
	padding-left:4px;
	color:#333;
}
.task-list-item-part > .pbox{
	font-size:13px;
	color:#8f8f8f;
}
.upload-task-status{
	position: absolute;
	top:13px;
	right:12px;
	font-size: 13px;
	letter-spacing: 1px;	
}
.status-delay{
	right:60px;
} 
.span-info{
	margin-right:12px;
}
.color-mark{
	color:#ff6633;
	margin-right:2px;
}
.waybill-tips{
	top:auto;
	right:12px;
	bottom:12px;
}
.waybil-no-data{
	text-align: center;
	padding: 5px;
	margin: auto; /*水平居中*/
    margin-top:40%; 
}

