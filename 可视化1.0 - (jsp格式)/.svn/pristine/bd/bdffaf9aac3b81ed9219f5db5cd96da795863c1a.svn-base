.upload{margin-top:0;}
.upload .weui-uploader__bd{overflow: visible;}
.upload .weui-uploader__hd{padding-bottom: 20px;}
.upload .weui-uploader__input-box{border-radius: 6px;}
.weui-uploader__file{position:relative;}
.weui-uploader__file>img{display:block;width:100%;height:100%;border-radius: 6px;}
.weui-uploader__file>.close-upimg{
	position: absolute;
	top:-6px;
	right:-6px;
	width:22px;
	height:22px;
	background:url(../images/del-icon.png) no-repeat center;
	background-size: 100%;
}
.img-name-p {
    display: none;
}
/* 新增回单提示 */
.img_tips{
	padding:20px 15px 0;
}
.img_tips>p{
	color:#f43530;
	font-size:15px;
	margin-bottom: 5px;
}
.img_tips>img{
	width:100%;	
}