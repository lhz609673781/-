/*公共部分*/
html,body{width: 100%; height: 100%; overflow: hidden;}

a{color: #666;}

/*入口模块*/
.index{width: 100%; height: 100%; overflow: hidden;}

/*头部*/
.header{height: 50px; border-bottom: 3px solid #4e6799; background-color: #344566;}

.header .logo{padding: 15px 11px;}

.header .logo a{display: block; width: 178px; height: 22px;}

.header .logo a img{display: block; width: 100%; height: 100%;}

.header .topBar{background-color: #344566;}

.header .topBar li a{color: #c2c2c2;}

.header .topBar li a:hover{color: #c2c2c2;}

.header .topBar li dl{top: 55px;}

/*侧边导航*/
.layui-nav{border-radius: 0;}

.layui-nav-side{top: 53px; transition: left 0.3s; -webkit-transition: left 0.3s; -moz-transition: left 0.3s;
    -o-transition: left 0.3s; -ms-transition: left 0.3s; background-color: #344566;}

.layui-nav-side.active{left: -200px;}

.layui-nav-side .layui-nav-child a {padding-left: 36px;}

.layui-nav .layui-nav-item{line-height: 50px;}

.layui-nav .layui-nav-more{top: 22px;}

.layui-nav .layui-nav-mored, .layui-nav-itemed .layui-nav-more{top: 16px;}

.layui-nav-tree .layui-nav-child dd.layui-this, .layui-nav-tree .layui-this, .layui-nav-tree .layui-this>a, .layui-nav-tree .layui-this>a:hover{background-color: #4e6799;}

.layui-nav-tree .layui-nav-bar{background-color: #4e6799;}

.custom-icon{margin-right: 8px;}

/*核心内容*/
.content{position: fixed; left: 200px; right: 0; top: 53px; bottom: 0; transition: left 0.3s; -webkit-transition: left 0.3s; -moz-transition: left 0.3s;
    -o-transition: left 0.3s; -ms-transition: left 0.3s;}