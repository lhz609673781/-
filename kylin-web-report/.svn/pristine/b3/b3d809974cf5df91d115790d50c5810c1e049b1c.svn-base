@CHARSET "UTF-8";
.layui-table th,.layui-table td{
	font-weight:normal;
	text-align: center;
	padding: 9px 1px;
}
.layui-table th{
	color:#358ff0;
}
.dataOut {
    float: right;
    margin-right: 10px;
    clear:both;
    text-shadow: 5px 2px 6px #000;
}
/*******下拉框**********/
.layui-form-select dl dd.layui-this {
    background-color: #358ff0;
}
/******日期插件样式******/
.layui-form-switch:before{
	content:"按日查";
	color:#358ff0;
	float:right;
}
.layui-form-onswitch:before{
	content:"按月查";
	color:#fff;
	float:left;
}
.layui-form-switch{
	width:66px;
	border:1px solid #358ff0;
}
.layui-form-onswitch{
	border-color: #358ff0;
    background-color: #358ff0;
}
.layui-tab-brief>.layui-tab-title .layui-this {
    color: #358ff0;
}
.layui-tab-brief>.layui-tab-more li.layui-this:after, .layui-tab-brief>.layui-tab-title .layui-this:after {
    border-bottom: 3px solid #358ff0;
}
.layui-form-switch i{
	 background-color: #358ff0;
}
.layui-form-onswitch i{
	left: 54px;
	background-color: #fff;
}
.layui-form-select dl dd.layui-this {
    background-color: #358ff0;
}
#laydate_table{
	display:none;
}
.layui-laypage .layui-laypage-curr .layui-laypage-em {
    background-color: #358ff0;
}
.select-tab{
	width:auto !important;
	left:30px;
	float: left;
}
.date-input{
	float: left;
	margin-right: 10px;
}
/***********分页显示数据***********/
#select-form{
	display: inline-block;
}
/************分割水平线************/
hr{
	margin-top: 10px;
    width: 120%;
    margin-left: -10%;
    border: 1px solid #8c8c8c;
}
/**********************************************轮播图样式*********************************************/ 
.clunm-container{
	position: relative;
}
.chartsSlider{
	width:80%;
	height:300px;
	/* margin: 0 auto !important; */
	overflow: hidden;
	top: 25px;
	margin-left: 10%;
}
.clunm-container .slider-container{
	height: 300px;
}
.clunm-container .slider{
	height:300px;
	text-align:center;
	padding-top:30px;
	box-sizing: border-box; 
}
.btn{
	width:50px;
	height: 50px;
	position:absolute;
	top:0;
	bottom:0;
	margin:auto;
	z-index:333333;
	cursor:pointer;
	display: none;
}
.prev-btn,.left-btn{
	left:48px;
	background: url(../images/prev.jpg) no-repeat;
	background-size: contain;
}
.next-btn,.right-btn{
	right:30px;
	background: url(../images/next.jpg) no-repeat;
	background-size: contain;
}
#dot-container{
	text-align: center;
	margin-top: 30px;
	margin-left:10%;
}
.dot{
	width: 10px;
    height: 10px;
    border-radius: 20px;
    display: inline-block;
    margin-left: 5px;
    cursor: pointer;
    border: 1px solid #8c8c8c;
}
.dot_active{
	background: #8c8c8c;
}
.barchrts-title,.slider-title{
	text-align: center;
    font-size: 18px;
    font-weight: 900;
    color: #666;
    margin-bottom: 10px;
}
.slider-title{
	margin-top: 15px;
	margin-bottom: 0px;
}
/****************删除所有**************/
.deleteAll {
    width: 15px;
    height: 15px;
    background: #ccc;
    position: absolute;
    right: 6px;
    top: 13px;
    border-radius: 10px;
    line-height: 12px;
    text-align: center;
    cursor: pointer;
}
/*******模糊搜索下拉框***************/
#selectSearch {
    border: 1px solid #ccc;
    position: absolute;
    z-index: 99999;
    background: rgba(0,0,0,0.8);
    width: 100%;
    max-height: 300px;
    overflow-y: auto;
}
#selectSearch li {
    line-height: 40px;
    padding-left: 10px;
    border-bottom: 1px solid #ccc;
    color: #fff;
    cursor: pointer;
}
#selectSearch li:hover {
    background: #ccc;
    color: #000;
}
/***************************************条形图**********************************************/
.bar-content{
	height: 350px;
	width: 35%;
}
.bar-content .swiper-slide{width: 95% !important;}
.swiper-container{
	width: 100%;
	height: 100%;
}
.barchrts-title{
	text-align: center;
    font-size: 18px;
    font-weight: 900;
    color: #666;
    margin-bottom: 10px;
    margin-top: 19px;
}
.swiper-pagination-bullet-active {
    background: #f7a35c !important;
}